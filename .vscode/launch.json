{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": ["${workspaceFolder}/test/run_tests.sh"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test",
            "MIMode": "gdb",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Run KNN Benchmarks",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": ["${workspaceFolder}/benchmark/knn-benchmark/run_knn_benchmarks.sh", 
                "${workspaceFolder}/benchmark/data/fashion-mnist-784-euclidean.hdf5"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/benchmark/knn-benchmark",
            "MIMode": "gdb",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Run ANN Benchmarks",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/bash",
            "args": ["${workspaceFolder}/benchmark/ann-benchmark/run_ann_benchmarks.sh", 
                "${workspaceFolder}/benchmark/data/fashion-mnist-784-euclidean.hdf5"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/benchmark/ann-benchmark",
            "MIMode": "gdb",
            "preLaunchTask": "Build Debug"
        }
    ]
}
