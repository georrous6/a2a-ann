{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Library",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DBUILD_CONFIGURATION=LIBRARY"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Build Library",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "annlib"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "dependsOn": "Configure Library"
    },
    {
      "label": "Configure Tests",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DBUILD_CONFIGURATION=TEST",
        "-DMATLAB_ROOT=/usr/local/MATLAB/R2024b"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Build Tests",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "tests"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "dependsOn": "Configure Tests"
    },
    {
      "label": "Configure Benchmarks",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DBUILD_CONFIGURATION=BENCHMARK",
        "-DMATLAB_ROOT=/usr/local/MATLAB/R2024b"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Build Benchmarks",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "benchmarks"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "dependsOn": "Configure Benchmarks"
    }
  ]
}
